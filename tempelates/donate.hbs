        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@100;300;400;500;600&display=swap');

*{
  font-family: 'Poppins', sans-serif;
  margin:0; padding:0;
  box-sizing: border-box;
  outline: none; border:none;
  text-transform: capitalize;
  transition: all .2s linear;
}

.box{
   display: flex;
  justify-content: center;
  align-items: center;
   padding:25px;
   min-height: 100vh;
  background: black;  margin-top: 5%;

}

.box form{
  padding:20px;
  width:700px;
  background: #fff;
  box-shadow: 0 5px 10px rgba(0,0,0,.1);
}

.box form .row{
  display: flex;
  flex-wrap: wrap;
  gap:15px;
}

.box form .row .col{
  flex:1 1 250px;
}

.box form .row .col .title{
  font-size: 20px;
  color:black;
  padding-bottom: 5px;
  text-transform: uppercase;
}

.box form .row .col .inputBox{
  margin:15px 0;
}

.box form .row .col .inputBox span{
  margin-bottom: 10px;
  display: block;
}

.box form .row .col .inputBox input{
  width: 100%;
  border:1px solid black;
  padding:10px 15px;
  font-size: 15px;
  text-transform: none;
}

.box form .row .col .inputBox input:focus{
  border:1px solid #000;
}

.box form .row .col .flex{
  display: flex;
  gap:15px;
}

.box form .row .col .flex .inputBox{
  margin-top: 5px;
}

.box form .row .col .inputBox img{
  height: 34px;
  margin-top: 5px;
  filter: drop-shadow(0 0 1px #000);
}

.box form .submit-btn{
  width: 100%;
  padding:12px;
  font-size: 17px;
  background:#333;
  color:#fff;
  margin-top: 5px;
  cursor: pointer;
}

.box form .submit-btn:hover{
  background: green;
}
    </style>
